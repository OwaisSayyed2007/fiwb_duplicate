{
    "name": "fiwb-monorepo",
    "private": true,
    "workspaces": [
        "apps/landing",
        "apps/beta-app/fiwb-frontend"
    ],
    "scripts": {
        "dev": "concurrently -n \"LANDING,NEXT,API\" -c \"blue,magenta,yellow\" \"npm run dev:landing\" \"npm run dev:beta-frontend\" \"npm run dev:beta-backend\"",
        "dev:landing": "npm run dev -w fiwb-landing",
        "dev:beta-frontend": "npm run dev -w fiwb-frontend",
        "dev:beta-backend": "cd apps/beta-app/fiwb-backend && . venv/bin/activate && uvicorn app.main:app --reload --port 8001",
        "dev:beta-full": "cd apps/beta-app && ./run_locally.sh",
        "build": "npm run build --workspaces",
        "test": "npm run test --workspaces"
    },
    "devDependencies": {
        "concurrently": "^8.2.2"
    }
}